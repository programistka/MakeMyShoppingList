<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.programistka.shoppingadvisor">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddShoppingEvent"
            android:label="@string/title_activity_add_shopping_event"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowHistory"
            android:label="@string/title_activity_show_history"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShowPredictions"
            android:label="@string/title_activity_show_predictions"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RowHistory"
            android:label="@string/title_activity_row_history"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Test"
            android:label="@string/title_activity_test"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
