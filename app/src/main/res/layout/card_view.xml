<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="1dp"
    android:weightSum="1">

    <ImageView android:id="@+id/icon_imageview"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@mipmap/calendar"
        android:layout_alignTop="@+id/date_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp" />

    <TextView
        android:id="@+id/date_textview"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/name_textview"
        android:layout_alignStart="@+id/name_textview"
        android:layout_marginTop="8dp" />


    <TextView
            android:id="@+id/name_textview"
            android:maxLines="3"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
        android:layout_marginLeft="9dp"
        android:layout_marginStart="9dp"
        android:layout_alignBottom="@+id/icon_imageview"
        android:layout_toRightOf="@+id/icon_imageview"
        android:layout_toEndOf="@+id/icon_imageview" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#c0c0c0"
        android:layout_below="@+id/icon_imageview"
        android:layout_centerHorizontal="true" />
</RelativeLayout>