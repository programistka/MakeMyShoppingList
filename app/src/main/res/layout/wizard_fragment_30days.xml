<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please fill the following fields with names of the products which you bought in past thirty days"
        android:id="@+id/textView"
        android:padding="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productName1"
        android:layout_margin="10dp"
        android:hint="ex. Soap"
        android:singleLine="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productName2"
        android:layout_margin="10dp"
        android:hint="ex. Washing-up liquid" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productName3"
        android:layout_margin="10dp"
        android:hint="ex. Washing powder" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productName4"
        android:layout_margin="10dp"
        android:hint="ex. Baking paper" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productName5"
        android:layout_margin="10dp"
        android:hint="ex. Baking soda" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to previous"
            android:id="@+id/backTo7DaysWizardFragment"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish and go to predictions"
            android:id="@+id/finish"
            android:layout_margin="10dp" />
    </LinearLayout>
</LinearLayout>